<h2>パスワード再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put ,class:"form" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <div class="form-group row">
      <div class="col-lg-10">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control input-lg" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-10">
        <%= f.label :password_confirmation, "新しいパスワード（再入力）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-lg" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 actions">
      <%= f.submit "Change my password" %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>