<div class="devise_form">
<h2>パスワードを忘れた場合</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class:"form" }) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group row">
      <div class="col-lg-10">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-lg" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 actions">
        <%= f.submit "再設定",class:"btn" %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>