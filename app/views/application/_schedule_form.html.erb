<div class="right_form_field center">
<h3>予定登録フォーム</h3>
  <!-- form_for部分 -->
  <%= form_for schedule do |sc|%>
  <ul class="submit_form">
    <li>
      <%= sc.label :start_datetime,"開始日時*" %>
      <%= sc.datetime_field :start_datetime %>
    </li>
    <li>
      <%= sc.label :end_data_time,"終了時間" %>
      <%= sc.time_field :end_datetime %>
    </li>
    <li>
      <%= fields_for :location do |lo| %>
      <%= lo.label :place_name,"場所*" %>
      <%= lo.text_field :place_name ,id: :place_name%>
      <%= lo.hidden_field :user_id, value:current_user.id%>
      <% end %>
    </li>
    <li>
      <%= fields_for event do |ev| %>
      <%= ev.label :program,"演目" %>
      <%= ev.text_field :program ,id: :program%>
    </li>
    <li>
      <%= ev.label :performer,"出演者" %>
      <%= ev.text_field :performer, id: :performer %>
      <%= ev.hidden_field :user_id, value:current_user.id%>
      <% end %>
    </li>
    <li>
      <%= fields_for :otherside do |ot|%>
      <%= ot.label :otherside_name,"購入先" %>
      <%= ot.text_field :otherside_name, id: :otherside_name %>
      <%= ot.hidden_field :user_id, value:current_user.id%>
      <% end %>
    </li>
     <li>
 <!--     <div class="pretty p-default p-curve p-toggle">
        <input type="checkbox" />
        <div class="state p-success p-on">
            <label>確定</label>
        </div>
        <div class="state p-danger p-off">
            <label>未定 </label>
        </div>
    </div>
  -->
        <%= sc.label :fix,"確定" ,class:"short_label"%>
        <%= sc.check_box :fix %>

        <%= sc.label :check,"清算済",class:"short_label" %>
        <%= sc.check_box :check %>
        <%= sc.hidden_field :user_id, value:current_user.id%>
      </li>
    <div class="plus_form">
      <li>
        <%= sc.label :seat_type,"席種" %>
        <%= sc.text_field :seat_type, id: :seat_type %>
      </li>

      <li>
        <%= sc.fields_for :memo||schedule.build_memo do |me| %>
        <%= me.label :メモ %>
        <%= me.text_area :body %>
        <% end %>
      </li>
    </div>
  </ul>
  <div class="submit_form_btn">
    <%= sc.submit "登録",class:"btn btn-default"%>
  </div>
  <!-- scの終了タグ -->
  <% end %>
</div>
<script>
  $(function(){
    // 追加項目の表示
    // $('#plus_form').on('click',function(){
    //   var icon = $('#plus_form').text();
    //   $('.plus_form').toggleClass('hidden');
    //     if(icon=="+"){
    //       $(this).text("-");
    //   } else {
    //       $(this).text("+");
    //   };
    // });


    // オートコンプリート
    $( "#place_name" ).autocomplete({
      autoFocus: true,
      source: "/schedules/autocomplete_place_name.json",
      minLength: 0,
    });
    $( "#program" ).autocomplete({
      autoFocus: true,
      source: "/schedules/autocomplete_program",
      minLength: 0,
    });
    $( "#performer" ).autocomplete({
      autoFocus: true,
      source: "/schedules/autocomplete_performer",
      minLength: 0,
    });
    $( "#seat_type" ).autocomplete({
      autoFocus: true,
      source: ["SS","S","A","B"],
      minLength: 0,
    });
    $( "#otherside_name" ).autocomplete({
      autoFocus: true,
      source: "/schedules/autocomplete_otherside_name",
      minLength: 0,
    });
  });
</script>